// app global css

@font-face 
    font-family: "Nunito";
    src: url("../assets/fonts/Nunito/Nunito-Regular.ttf");
    
body { font-family: "Nunito", serif }

$color1_1 = #ff9966
$color1_2 = #ff5e62

$color2_1 = #7F00FF
$color2_2 = #E100FF

$color3_1 = #0cebeb
$color3_2 = #29ffc6

$color4_1 = #642B73
$color4_2 = #C6426E

$color5_1 = #36D1DC
$color5_2 = #5B86E5

$color6_1 = #D66D75
$color6_2 = #E29587

.gradient-1
    background: $color1_1;
    background: linear-gradient(90deg, $color1_1 0%, $color1_2 100%);
.gradient-2
    background: $color2_1;
    background: linear-gradient(90deg, $color2_1 0%, $color2_2 100%);
.gradient-3
    background: $color3_1;
    background: linear-gradient(90deg, $color3_1 0%, $color3_2 100%);
.gradient-4
    background: $color4_1;
    background: linear-gradient(90deg, $color4_1 0%, $color4_2 100%);
.gradient-5
    background: $color5_1;
    background: linear-gradient(90deg, $color5_1 0%, $color5_2 100%);
.gradient-6
    background: color6_1;
    background: linear-gradient(90deg, $color6_1 0%, $color6_2 100%);

.shadow-black
    -webkit-box-shadow: 0px 0px 15px -6px #c9c9c9; 
    box-shadow: 0px 0px 15px -6px #c9c9c9;
.shadow-1
    -webkit-box-shadow: 0px 0px 15px -6px $color1_1; 
    box-shadow: 0px 0px 15px -6px $color1_1;
.shadow-2
    -webkit-box-shadow: 0px 0px 15px -6px $color2_1; 
    box-shadow: 0px 0px 15px -6px $color2_1;
.shadow-3
    -webkit-box-shadow: 0px 0px 15px -6px $color3_1; 
    box-shadow: 0px 0px 15px -6px $color3_1;
.shadow-4
    -webkit-box-shadow: 0px 0px 15px -6px $color4_1; 
    box-shadow: 0px 0px 15px -6px $color4_1;
.shadow-5
    -webkit-box-shadow: 0px 0px 15px -6px $color5_1; 
    box-shadow: 0px 0px 15px -6px $color5_1;
.shadow-6
    -webkit-box-shadow: 0px 0px 15px -6px $color6_1; 
    box-shadow: 0px 0px 15px -6px $color6_1;